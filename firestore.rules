rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if the user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Rounds collection: users can only read/write their own rounds
    match /rounds/{roundId} {
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Draft rounds collection: users can only read/write their own draft rounds
    match /draftRounds/{draftId} {
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Users collection: users can only read/write their own user document
    match /users/{userId} {
      allow read, write: if isOwner(userId);
    }
    
    // Schedules collection: users can only read/write their own schedules
    match /schedules/{scheduleId} {
      allow read: if isAuthenticated() && (resource.data.userId == request.auth.uid);
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Courses collection: all authenticated users can read, but only admins can write
    // For now, allow read for all authenticated users
    match /courses/{courseId} {
      allow read: if isAuthenticated();
      // Writing will be handled through admin functions or direct console access for now
    }
  }
}
